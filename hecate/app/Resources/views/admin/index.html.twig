{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">{% endblock %}
{% block body %}
<div class="col-10">

  <div class="alert alert-dark" role="alert">
    Ajustez la Présence Opérationnelle Journalière pour tous les créneaux :

     <button class="btn btn-outline-primary ml-2" id="removePoj"> -  </button>
     <span>{{ poj.valParam }}</span>
     <button class="btn btn-outline-primary" id="addPoj"> + </button>
  </div>

<hr class="mx-2">

<div class="">
  <p>Date: <input type="text" id="datepicker"></p>
</div>
<hr class="mx-2">
<div class="">
  <span>Ajouter un SP au créneaux :</span>
  <select class="" name="users">
    {% for user in users %}
    <option value="{{ user.id }}">{{ user.username }}</option>
    {% endfor %}
  </select>
<button type="button" name="button">Ajouter</button>
</div>

<hr class="mx-2">

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Agent</th>
      <th scope="col">Fonction</th>
      <th scope="col">Créneaux journée pris</th>
      <th scope="col">Créneaux week-end pris </th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Jfontaine</td>
      <td>CA</td>
      <td>10</td>
      <td>5</td>
      <td> - </td>
    </tr>
  </tbody>

</table>
</div>




{% endblock %}
{% block javascripts %}
	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="{{ asset('js/param.js') }}" type="text/javascript"></script>
{% endblock %}
